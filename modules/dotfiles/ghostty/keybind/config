# New window
keybind = ctrl+space>shift+\=new_split:right
keybind = ctrl+space>-=new_split:down

## Move between windows
### - arrow keys
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right
keybind = ctrl+shift+up=goto_split:up
keybind = ctrl+shift+down=goto_split:down

### vim keys
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+j=goto_split:down

### Key sequence
### - arrow keys
keybind = ctrl+space>left=goto_split:left
keybind = ctrl+space>right=goto_split:right
keybind = ctrl+space>up=goto_split:up
keybind = ctrl+space>down=goto_split:down

### vim keys
keybind = ctrl+space>h=goto_split:left
keybind = ctrl+space>l=goto_split:right
keybind = ctrl+space>k=goto_split:up
keybind = ctrl+space>j=goto_split:down
# Tabs

## New Tab
keybind = ctrl+space>tab=new_tab

## Move between tabs
### Numbers

#### With Mods
keybind = ctrl+shift+1=goto_tab:1
keybind = ctrl+shift+2=goto_tab:2
keybind = ctrl+shift+3=goto_tab:3
keybind = ctrl+shift+4=goto_tab:4
keybind = ctrl+shift+5=goto_tab:5
keybind = ctrl+shift+6=goto_tab:6
keybind = ctrl+shift+7=goto_tab:7
keybind = ctrl+shift+8=goto_tab:8
keybind = ctrl+shift+9=goto_tab:9

#### With key sequence
keybind = ctrl+space>1=goto_tab:1
keybind = ctrl+space>2=goto_tab:2
keybind = ctrl+space>3=goto_tab:3
keybind = ctrl+space>4=goto_tab:4
keybind = ctrl+space>5=goto_tab:5
keybind = ctrl+space>6=goto_tab:6
keybind = ctrl+space>7=goto_tab:7
keybind = ctrl+space>8=goto_tab:8
keybind = ctrl+space>9=goto_tab:9

